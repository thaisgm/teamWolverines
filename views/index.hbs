          images[0] = "http://pcad.lib.washington.edu/media/pcad-images/991.jpg";
          images[1] = "http://2nzvmtmxyesbi7fm3pk4v9h7.wpengine.netdna-cdn.com/wp-content/uploads/2014/10/san-fran-teacher-overview-home.jpg";
          images[2] = "https://media2.fdncms.com/sfexaminer/imager/children-and-books-surround-teacher-librar/u/original/2825897/librarian1.jpg";
          images[3] = "http://s79f01z693v3ecoes3yyjsg1.wpengine.netdna-cdn.com/wp-content/uploads/2017/08/sf.OConnell.0831.jpg";

      </script>
   </head>
   <body onload = "startTimer()" style = "background-color: black; margin: 0px;">
       <img id = "img" style = "position: fixed; right: 0; bottom: 0; width: 100%; height: 100%;"
       src="https://az760333.vo.msecnd.net/-/media/property/jdv/themarker/marker_coit_dark-crpd1600x760.jpg?ts=a1fd2796-9385-4537-a935-1dd7c0f499a1">
